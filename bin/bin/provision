#!/bin/sh -e
#
# Upgrade all my tools

brew update
brew doctor

brew install \
    autojump \
    autossh \
    bat \
    coreutils \
    diff-so-fancy \
    direnv \
    exa \
    fzf \
    git \
    htop-osx \
    hub \
    mcfly \
    neovim \
    reattach-to-user-namespace \
    rename \
    ripgrep \
    stow \
    tmux \
    trash \
    vim \
    watch \
    zsh

brew install php  # For Alfred "GitHub" workflow

brew upgrade

# Python 3
brew install python
brew unlink python && brew link --overwrite python

# Oh-My-Zsh
env ZSH=$ZSH /bin/sh $ZSH/tools/upgrade.sh

# Required for VIM/NeoVIM plugins (including Deoplete)
#pip3 install --upgrade neovim


# Additional Neovim setup
brew install nodejs
